# {{ ansible_managed }}
# etcd url location.  Point this to the server where etcd runs
FLANNEL_ETCD_ENDPOINTS=
{%-for host in groups["k8s-master"] %}
https://{{hostvars[host]['ansible_'+ network.int_iface]['ipv4']['address']}}:2379
{%-if not loop.last %},{%endif%}
{% endfor %}

# etcd config key.  This is the configuration key that flannel queries
# For address range assignment
FLANNEL_ETCD_PREFIX="{{flannel_etcd_prefix}}"

# Any additional options that you want to pass
FLANNEL_OPTIONS="--etcd-cafile={{etcd_certs_dir}}/ca.pem --etcd-certfile={{etcd_certs_dir}}/{{inventory_hostname}}.pem --etcd-keyfile={{etcd_certs_dir}}/{{inventory_hostname}}-key.pem"
