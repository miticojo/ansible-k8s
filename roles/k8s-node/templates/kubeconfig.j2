apiVersion: v1
clusters:
- cluster:
    certificate-authority: {{kube_certs_dir}}/ca.pem
    server: {{kube_master_api_uri}}
  name: local
contexts:
- context:
    cluster: local
    user: kubelet
  name: service-account-context
current-context: service-account-context
kind: Config
preferences: {}
users:
- name: kubelet
  user:
    client-certificate: {{kube_certs_dir}}/{{inventory_hostname}}.pem
    client-key: {{kube_certs_dir}}/{{inventory_hostname}}-key.pem
